          <div class="odd" id = "p1p2" ></div>
          <div class="even" id = "p1p3"></div>
          <div class="odd"  id = "p1p4">
          </div>
          <div class="odd"  id = "p2p1">
          </div>
          <div class="even" id = "p2p2">
          </div>
          <div class="odd" id = "p2p3">
          </div>
          <div class="even" id = "p2p4">
          </div>
          <div class="even" id = "p3p1" >
          </div>
          <div class="odd"  id = "p3p2">
          </div>
          <div class="even"  id = "p3p3">
          </div>
          <div class="odd"  id = "p3p4">
          </div>
          <div class="odd" id = "p4p1" >
          </div>
          <div class="even" id = "p4p2" >
          </div>
          <div class="odd" id = "p4p3" >
          </div>
          <div class="even" id = "p4p4">
          </div>
        </div>
  </div>

      <div class="grid-item">
        <div class="number-grid"><!--grid that holds the individual number buttons and functions added to each button as well as id to
        identify who clicked the button -->
